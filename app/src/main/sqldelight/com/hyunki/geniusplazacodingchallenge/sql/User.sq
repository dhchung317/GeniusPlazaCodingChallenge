CREATE TABLE Users (
    _id INTEGER PRIMARY KEY AUTOINCREMENT,
    userId INTEGER NOT NULL UNIQUE,
    first_name TEXT NOT NULL,
    last_name TEXT NOT NULL,
    email TEXT,
    avatar TEXT
);

selectAllUsers:
SELECT * FROM Users ORDER BY _id;

insertOrReplaceUser:
INSERT OR REPLACE INTO Users(
    userId,
    first_name,
    last_name,
    email,
    avatar
)
VALUES(?,?,?,?,?);

selectUserById:
SELECT * FROM Users WHERE userId = ?;

deleteAllUsers:
DELETE FROM Users;